# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file, utf-8 charset
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{html,css,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{rs}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

